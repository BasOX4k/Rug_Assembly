{% extends 'base2.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Passer la commande</h1>

        <h2 class="mb-3">Votre panier</h2>
        <ul class="list-group mb-4">
            {% for item in items %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ item.produit.nom }} - Quantité : {{ item.quantity }}
                    <span class="badge bg-primary rounded-pill">{{ item.produit.prix }} €</span>
                </li>
            {% endfor %}
        </ul>

        <h3>Total : <span class="fw-bold">{{ total }} €</span></h3>

        {{ form_start(form, {'attr': {'class': 'row g-3 mt-4'}}) }}
            <div class="col-md-6">
                {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
             <div class="col-md-6">
                {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.adresse, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.telephone, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Confirmer la commande</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
