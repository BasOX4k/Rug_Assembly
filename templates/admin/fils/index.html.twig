{% extends 'base.html.twig' %}

{% block title %}Fils index{% endblock %}

{% block body %}
    <h1>Fils index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Couleur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fil in fils %}
            <tr>
                <td>{{ fil.id }}</td>
                <td>{{ fil.type }}</td>
                <td>{{ fil.couleur }}</td>
                <td>
                    <a href="{{ path('app_fils_show', {'id': fil.id}) }}">show</a>
                    <a href="{{ path('app_fils_edit', {'id': fil.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fils_new') }}">Create new</a>
{% endblock %}
