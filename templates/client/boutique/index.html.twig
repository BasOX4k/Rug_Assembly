{% extends 'base2.html.twig' %}

{% block title %}Produits Index{% endblock %}

{% block body %}
<form action="{{ path('boutique_search') }}" method="get">
    <input type="text" name="q" placeholder="Rechercher un produit par nom" />
    <button type="submit">Rechercher</button>
</form>
    <div class="container mt-4">
        <h1 class="mb-4">Produits Index</h1>
        
        
        {# <div class="row">
            <!-- Category Section on the Left -->
            <div class="col-md-3">
                <div class="list-group">
                    <h5 class="mb-3">Catégories</h5>
                    {% for tondeuse in tondeuses %}
                        <a href="#" class="list-group-item list-group-item-action">{{ tondeuse.nom }}</a>
                    {% else %}
                        <p class="text-center">No categories found</p>
                    {% endfor %}
                </div>
            </div> #}

            <!-- Product Cards -->
            <div class="col-md-9">
                <div class="row">
                    {% for produit in produits %}
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                {% if produit.image %}
                                    <img src="{{ produit.image }}" class="card-img-top" alt="{{ produit.nom }}" style="height: 200px; object-fit: cover;">
                                {% else %}
                                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                                        <span class="text-muted">No image</span>
                                    </div>
                                {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title">{{ produit.nom }}</h5>
                                    <p class="card-text">{{ produit.description }}</p>
                                    <p class="card-text"><strong>Prix: </strong>  {{ produit.prix }} <strong>€</strong></p>
                                    <a href="{{ path('boutique_detail', { 'id': produit.id }) }}" class="btn btn-primary">Détails</a>
                                    
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <p class="text-center">No records found</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
