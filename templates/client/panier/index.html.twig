{% extends 'base2.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Votre Panier</h1>

    {% if items is empty %}
        <div class="alert alert-warning" role="alert">
            Votre panier est vide.
        </div>
    {% else %}
        <table class="table table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Produit</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Total</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td><img src="{{ item.produit.image }}" alt="{{ item.produit.nom }}" class="img-thumbnail" style="width: 100px; height: auto;"></td>
                        <td>{{ item.produit.nom }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.produit.prix }} €</td>
                        <td>{{ item.produit.prix * item.quantity }} €</td>
                        <td>
                            <a class="btn btn-sm btn-danger" href="{{ path('supprimer_panier', {id: item.produit.id}) }}">
                                <i class="fas fa-trash-alt"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <h3>Total: {{ total }} €</h3>
            <a href="{{ path('passer_commande') }}" class="btn btn-success">
                <i class="fas fa-shopping-cart"></i> Passer à la caisse
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
