{% extends 'base2.html.twig' %}

{% block title %}Confirmation de la commande{% endblock %}

{% block body %}
    <div class="container">
        <h1>Confirmation de la commande</h1>

        {% if success is defined and success %}
            <div class="alert alert-success" role="alert">
                Votre commande a été passée avec succès ! Merci de votre achat.
            </div>

            <p>Nous vous enverrons un e-mail de confirmation à {{ email }}.</p>

            <p>Total de la commande : {{ total }}€</p>

            <a href="{{ path('home') }}" class="btn btn-primary">Retour à l'accueil</a>
        {% else %}
            <div class="alert alert-danger" role="alert">
                Oups ! Il y a eu un problème lors de la passation de la commande. Veuillez réessayer plus tard.
            </div>

            <a href="{{ path('cart') }}" class="btn btn-warning">Retourner au panier</a>
        {% endif %}
    </div>
{% endblock %}
